# Application
APP_NAME={{ .ProjectName }}
APP_VERSION=0.1.0
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

{{if eq .Database "postgres"}}
# Database
DATABASE_URL=postgresql://user:password@localhost/{{ .ProjectName | snake }}
{{end}}

{{if eq .Database "sqlite"}}
# Database
DATABASE_URL=sqlite:///./{{ .ProjectName | snake }}.db
{{end}}

# Logging
LOG_LEVEL=INFO
